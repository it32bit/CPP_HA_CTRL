{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: clean rebuild",
            "type": "cmake",
            "command": "cleanRebuild",
            "targets": ["all"],
            "preset": "${command:cmake.activeBuildPresetName}",            
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "CubeProg: Flash project (SWD)",
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": [
                "-c", "port=SWD",
                "-d", "${workspaceFolder}/build/bin/ha-ctrl.elf",
                "-hardRst",
                "-rst",
                "--start"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build + Flash",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "CubeProg: Flash project (SWD)"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CubeProg: List all available communication interfaces",
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": ["--list"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: build",
            "type": "cmake",
            "command": "build",
            "targets": ["all"],
            "preset": "debug",
            "group": "build",
            "problemMatcher": [],
        }
    ]
}
